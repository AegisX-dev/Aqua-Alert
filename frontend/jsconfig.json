    {
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
        "@/*": ["./src/*"]
        },
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "*.js",
        "*.jsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
    }